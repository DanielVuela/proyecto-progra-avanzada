@model MacroBalance.Database.EstadoEmocional

@{
    ViewBag.Title = "Registrar Estado Emocional";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main container mt-4">
    <div class="pagetitle mb-3">
        <h2 class="text-success fw-bold">Registrar Estado Emocional</h2>
        <p class="text-muted">Añadí cómo te sentiste y cuándo para llevar un mejor control emocional.</p>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card shadow p-4 border-start border-4 border-success">
            <div class="mb-3">
                @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "form-label fw-semibold text-success" })
                @Html.DropDownListFor(model => model.Estado,
                    new SelectList(ViewBag.EstadosDisponibles as List<string>),
                    "Seleccione un estado emocional",
                    new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "form-label fw-semibold text-success" })
                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", rows = 3, placeholder = "¿Querés describir más detalles sobre cómo te sentiste?" })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "form-label fw-semibold text-success" })
                @Html.TextBoxFor(model => model.Fecha, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-outline-success">
                    <i class="bi bi-arrow-left-circle"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-success fw-semibold">
                    <i class="bi bi-save"></i> Guardar
                </button>
            </div>
        </div>
    }
</main>
