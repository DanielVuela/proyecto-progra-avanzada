@model MacroBalance.Database.EstadoEmocional

@{
    ViewBag.Title = "Detalles del Estado Emocional";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var sugerencias = ViewBag.Sugerencias as List<string>;
}

<main class="main container mt-4">
    <div class="pagetitle text-center mb-4">
        <h2 class="text-success fw-bold">🍽 Sugerencias Alimenticias por Estado Emocional</h2>
        <p class="text-muted">Recomendaciones alimenticias basadas en tu registro emocional.</p>
    </div>

    <div class="card shadow-sm border-start border-4 border-success mb-4 p-4">
        <div class="row mb-3">
            <div class="col-md-4">
                <label class="fw-semibold">Estado emocional:</label>
                <div class="text-success">@Model.Estado</div>
            </div>
            <div class="col-md-4">
                <label class="fw-semibold">Fecha:</label>
                <div>@(Model.Fecha?.ToString("dd/MM/yyyy"))</div>
            </div>
            <div class="col-md-4">
                <label class="fw-semibold">Descripción:</label>
                <div>@Model.Descripcion</div>
            </div>
        </div>
    </div>

    @if (sugerencias != null && sugerencias.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle shadow-sm border rounded overflow-hidden">
                <thead class="table-success text-center">
                    <tr>
                        <th class="text-success">Sugerencias Alimenticias para "@Model.Estado"</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sugerencia in sugerencias)
                    {
                        <tr>
                            <td>@sugerencia</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center shadow-sm">
            <i class="bi bi-info-circle"></i> No hay sugerencias para este estado emocional.
        </div>
    }

    <div class="text-end mt-4">
        <a href="@Url.Action("Index", "EstadoEmocional")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver a la lista
        </a>
    </div>
</main>
