@model IEnumerable<MacroBalance.Database.Usuario>

@{
    ViewBag.Title = "Administración de Usuarios";
}

<h2>Lista de Usuarios</h2>
<p>
    @Html.ActionLink("Agregar Usuario", "Create", "Administrador", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Correo Electrónico</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nombre</td>
                <td>@usuario.Apellidos</td>
                <td>@usuario.CorreoElectronico</td>
                <td>@usuario.Rol</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = usuario.Id }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = usuario.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>

            </tr>
        }
    </tbody>
</table>
