@model MacroBalance.Database.Recordatorios

@{
    ViewBag.Title = "Recordatorio de Calorías Máximas";
}

<main class="main">
    <div class="pagetitle">
        <h1 class="text-success fw-bold">Recordatorio de Calorías Máximas</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li class="breadcrumb-item active">Recordatorio de Calorías Máximas</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card border-start border-4 border-success shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-success fw-semibold">Configura tu Recordatorio</h5>

                        @if (TempData["Mensaje"] != null)
                        {
                            <div class="alert alert-success">@TempData["Mensaje"]</div>
                        }

                        <!-- Formulario para guardar recordatorio -->
                        @using (Html.BeginForm("GuardarRecordatorioCalorias", "Recordatorios", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label class="form-label fw-bold">Frecuencia</label>
                                <select name="frecuencia" class="form-control">
                                    <option value="Diario" @(Model?.Frecuencia == "Diario" ? "selected" : "")>Diario</option>
                                    <option value="Semanal" @(Model?.Frecuencia == "Semanal" ? "selected" : "")>Semanal</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Hora</label>
                                <input type="time" name="hora" class="form-control" value="@Model?.Hora.ToString(" HH:mm")" required />
                            </div>

                            <button type="submit" class="btn btn-success">Guardar Recordatorio</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
