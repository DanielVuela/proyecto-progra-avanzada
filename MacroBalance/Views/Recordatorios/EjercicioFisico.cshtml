@model MacroBalance.Database.Recordatorios

@{
    ViewBag.Title = "Recordatorio de Ejercicio Físico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main">
    <div class="pagetitle">
        <h1 class="text-success fw-bold">Recordatorio de Ejercicio Físico</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li class="breadcrumb-item active">Recordatorio de Ejercicio Físico</li>
            </ol>
        </nav>
    </div>

    <section class="section account-settings">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-start border-4 border-success shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-success fw-semibold">Configura tu Recordatorio</h5>

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                        }

                        @using (Html.BeginForm("EjercicioFisico", "Recordatorios", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label class="form-label fw-bold">Frecuencia</label>
                                <select name="Frecuencia" class="form-control" required>
                                    <option value="Diario" @(Model.Frecuencia == "Diario" ? "selected" : "")>Diario</option>
                                    <option value="Semanal" @(Model.Frecuencia == "Semanal" ? "selected" : "")>Semanal</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Hora</label>
                                <input type="time" name="Hora" class="form-control" value="@Model.Hora?.ToString(" hh\\:mm")" required />
                            </div>

                            <button type="submit" class="btn btn-success">Guardar Recordatorio</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
