@model MacroBalance.Models.ViewModels.RegistroAlimentoViewModel

@{
    ViewBag.Title = "Agregar alimento consumido";
}

<h2 class="mb-4 text-center">Agregar alimento consumido</h2>

@using (Html.BeginForm("Crear", "RegistroAlimento", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.DietaId)

    <div class="mb-3">
        @Html.LabelFor(m => m.AlimentoId, new { @class = "form-label" })
        @Html.DropDownListFor(m => m.AlimentoId, Model.Alimentos, "-- Seleccioná un alimento --", new { @class = "form-select" })
        @Html.ValidationMessageFor(m => m.AlimentoId, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Cantidad, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Cantidad, new { @class = "form-control", type = "number", step = "0.1", min = "0.1", placeholder = "Ej: 1.5 porciones" })
        @Html.ValidationMessageFor(m => m.Cantidad, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary w-100">Guardar alimento</button>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}
