@model IEnumerable<MacroBalance.Models.ViewModels.DietaConObjetivoViewModel>

@{
    ViewBag.Title = "Objetivos de Salud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1 class="text-success fw-bold">Objetivos de Salud</h1>
    </div>

    <section class="section">
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card border-start border-4 border-success shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="text-success fw-bold">@item.NombreObjetivo</h5>
                            <p><strong>Dieta:</strong> @item.NombreDieta</p>
                            <p>@item.DescripcionDieta</p>

                            <div class="mt-auto">
                                <a href="@Url.Action("DetallesObjetivo", "ObjetivosSalud", new { dietaId = item.IdDieta })"
                                   class="btn btn-outline-success">
                                    <i class="bi bi-eye me-1"></i> Ver detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

</main>

